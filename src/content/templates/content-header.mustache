<div class="content-header-inner">
    {{#author.avatar}}
        <a class="content-author-avatar" {{#authorAvatarUrl}}href="{{authorAvatarUrl}}" target="_blank"{{/authorAvatarUrl}}>
            <img src="{{ author.avatar }}" />
        </a>
    {{/author.avatar}}

    <div class="content-byline">
        {{#contentSourceUrl}}
            <a class="hub-tooltip-link tooltip-{{contentSourceName}} content-source-logo" {{#contentSourceUrl}}href="{{contentSourceUrl}}" target="_blank"{{/contentSourceUrl}} {{#contentSourceTooltipText}}title="{{contentSourceTooltipText}}"{{/contentSourceTooltipText}}></a>
        {{/contentSourceUrl}}
        {{^contentSourceUrl}}
            <span class="content-source-logo"></span>
        {{/contentSourceUrl}}

        {{#authorUrl}}
            <a class="content-author-name" href="{{ authorUrl }}" target="_blank">{{ author.displayName }}</a>
        {{/authorUrl}}
        {{^authorUrl}}
            <span class="content-author-name">{{ author.displayName }}</span>
        {{/authorUrl}}
        {{#authorVerified}}
            <span class="content-author-verified"></span>
        {{/authorVerified}}
        {{#authorUserName}}
            {{#authorUrl}}
                <a class="content-author-username" href="{{authorUrl}}" target="_blank">{{authorUserNamePrefix}}{{ authorUserName }}</a>
            {{/authorUrl}}
        {{/authorUserName}}
    </div>
</div>
