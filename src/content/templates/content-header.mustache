<div class="content-header-inner">
    {{#author.avatar}}
        <a class="content-author-avatar" {{#authorAvatarUrl}}href="{{authorAvatarUrl}}" target="_blank"{{/authorAvatarUrl}}>
            <img src="{{ author.avatar }}" />
        </a>
    {{/author.avatar}}

    <div class="content-byline">
        {{#contentSourceUrl}}
            <a class="content-source-logo" {{#contentSourceUrl}}href="{{contentSourceUrl}}" target="_blank"{{/contentSourceUrl}}></a>
        {{/contentSourceUrl}}
        {{^contentSourceUrl}}
            <span class="content-source-logo"></span>
        {{/contentSourceUrl}}

        {{#authorUrl}}
            <div class="content-author-name">
                <a href="{{ authorUrl }}" target="_blank">{{ author.displayName }}</a>
            </div>
        {{/authorUrl}}
        {{^authorUrl}}
            <div class="content-author-name">
                <span>{{ author.displayName }}</span>
            </div>
        {{/authorUrl}}
        {{#authorVerified}}
            <span class="content-author-verified"></span>
        {{/authorVerified}}
        {{#authorUserName}}
            {{#authorUrl}}
                <div class="content-author-username">
                    <a href="{{authorUrl}}" target="_blank">{{authorUserNamePrefix}}{{ authorUserName }}</a>
                </div>
            {{/authorUrl}}
        {{/authorUserName}}
    </div>
</div>
