<div class="content-header-inner">
    <div class="content-byline">
        {{#contentSourceUrl}}
            <a class="content-source-logo" {{#contentSourceUrl}}href="{{contentSourceUrl}}" target="_blank"{{/contentSourceUrl}}> 
                {{#favicon}}
                    <img class="content-source-logo" src="{{ favicon }}"/>
                {{/favicon}}
                {{^favicon}}
                    <span class="content-source-logo"></span>
                {{/favicon}}
            </a>
        {{/contentSourceUrl}}
        {{^contentSourceUrl}}
            {{#favicon}}
                <img class="content-source-logo" src="{{ favicon }}"/>
            {{/favicon}}
            {{^favicon}}
                <span class="content-source-logo"></span>
            {{/favicon}}
        {{/contentSourceUrl}}

        {{#displayNameLink}}
            <div class="content-author-name">
                <a href="{{ displayNameLink }}" target="_blank">{{ displayName }}</a>
            </div>
        {{/displayNameLink}}
        {{^displayNameLink}}
            <div class="content-author-name">{{ displayName }}</div>
        {{/displayNameLink}}

        {{#viaText}}
            <div class="content-author-username">via {{ viaText }}</div>
        {{/viaText}}
    </div>
</div>
